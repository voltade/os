{
  "private": true,
  "name": "voltade-os",
  "license": "AGPL-3.0-only",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*/*"
  ],
  "scripts": {
    "ncu": "ncu --packageManager bun --workspaces --format group -i",
    "tofu:init": "cd terraform && tofu init -upgrade",
    "tofu:apply": "cd terraform && tofu apply && ./post-apply.sh",
    "tofu:destroy": "cd terraform && tofu state rm helm_release.cilium && tofu destroy && rm -r certs/* terraform.tfstate* kubeconfig",
    "tofu:nuke": "cd terraform && docker rm --force --volumes registry voltade-os-local-control-plane && rm -r certs/* terraform.tfstate* kubeconfig",
    "charts": "bun run scripts/charts.ts",
    "charts:patch": "bun run scripts/charts.ts --patch",
    "voltade": "bun packages/voltade-cli/bin/dev.ts",
    "prepare": "lefthook install",
    "clean:all": "rm -rf node_modules && bun --filter='*' clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@inquirer/prompts": "^7.8.4",
    "@types/bun": "latest",
    "@types/semver": "^7.7.0",
    "concurrently": "^9.2.0",
    "lefthook": "^1.12.3",
    "npm-check-updates": "^18.0.2",
    "semver": "^7.7.2",
    "sql-formatter": "^15.6.6",
    "yaml": "^2.8.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "resolutions": {
    "react": "^19.1.1",
    "@types/react": "^19.1.10"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@tailwindcss/oxide",
    "@swc/core",
    "core-js",
    "esbuild",
    "lefthook"
  ]
}
