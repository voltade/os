{
  "private": true,
  "name": "voltade-os",
  "license": "AGPL-3.0-only",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ncu": "ncu --packageManager bun --workspaces --format group -i",
    "tofu:init": "cd terraform/kind-local && tofu init -upgrade",
    "tofu:apply": "cd terraform/kind-local && tofu apply && ./post-apply.sh",
    "tofu:destroy": "cd terraform/kind-local && tofu state rm helm_release.cilium && tofu destroy && rm -r certs/* terraform.tfstate* kubeconfig",
    "tofu:nuke": "cd terraform/kind-local && docker rm --force --volumes registry voltade-os-local-control-plane && rm -r certs/* terraform.tfstate* kubeconfig",
    "charts": "bun run scripts/charts.ts",
    "charts:patch": "bun run scripts/charts.ts --patch",
    "voltade": "bun packages/cli/src/index.ts",
    "prepare": "lefthook install",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@inquirer/prompts": "^7.8.1",
    "@types/bun": "latest",
    "@types/semver": "^7.7.0",
    "concurrently": "^9.2.0",
    "lefthook": "^1.12.2",
    "npm-check-updates": "^18.0.2",
    "semver": "^7.7.2",
    "sql-formatter": "^15.6.6",
    "yaml": "^2.8.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "patchedDependencies": {
    "better-auth@1.3.4": "patches/better-auth@1.3.4.patch",
    "vite-plugin-qiankun-lite@1.3.0": "patches/vite-plugin-qiankun-lite@1.3.0.patch"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@tailwindcss/oxide",
    "@swc/core",
    "core-js",
    "esbuild",
    "lefthook"
  ]
}
