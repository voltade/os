{
  "private": true,
  "name": "voltade-os",
  "license": "AGPL-3.0-only",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ncu": "ncu --packageManager bun --workspaces --format group -i",
    "tofu:init": "cd terraform/kind-local && tofu init -upgrade",
    "tofu:apply": "cd terraform/kind-local && tofu apply && ./post-apply.sh",
    "tofu:destroy": "cd terraform/kind-local && tofu state rm helm_release.cilium && tofu destroy && rm -r certs/* terraform.tfstate* kubeconfig",
    "tofu:nuke": "cd terraform/kind-local && docker rm --force --volumes registry voltade-os-local-control-plane && rm -r certs/* terraform.tfstate* kubeconfig",
    "charts": "bun run scripts/charts.ts",
    "charts:patch": "bun run scripts/charts.ts --patch",
    "setup:env": "bun run scripts/env.ts",
    "prepare": "lefthook install",
    "template:dev": "bun run --filter @voltade/app-template dev",
    "core:db:start": "bun run --filter @voltade/core-schema db:start",
    "core:db:push": "bun run --filter @voltade/core-schema db:push",
    "core:db:stop": "bun run --filter @voltade/core-schema db:stop",
    "core:db:plv8ify": "bun run --filter @voltade/core-schema db:plv8ify",
    "core:db:current": "bun run --filter @voltade/core-schema db:current",
    "core:db:seed": "bun run --filter @voltade/core-schema db:seed",
    "core:db:reset": "bun run --filter @voltade/core-schema db:reset",
    "core:db:typegen": "bun run --filter @voltade/core-schema db:typegen",
    "clean": "git clean -xdf node_modules 'packages/*/node_modules'"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@inquirer/prompts": "^7.8.0",
    "@types/bun": "latest",
    "@types/semver": "^7.7.0",
    "concurrently": "^9.2.0",
    "lefthook": "^1.12.2",
    "npm-check-updates": "^18.0.2",
    "semver": "^7.7.2",
    "sql-formatter": "^15.6.6",
    "yaml": "^2.8.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "hono": "^4.8.12",
    "zod": "^4.0.14"
  },
  "patchedDependencies": {
    "better-auth@1.3.4": "patches/better-auth@1.3.4.patch"
  }
}
