{
  "private": false,
  "name": "@voltade/core-schema",
  "license": "AGPL-3.0-only",
  "version": "0.1.0",
  "type": "module",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "module": "index.ts",
  "description": "Voltade OS database schema and API definitions",
  "author": "Voltade Team",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voltade/voltade-os.git",
    "directory": "packages/core-schema"
  },
  "keywords": [
    "database",
    "schema",
    "drizzle",
    "postgresql",
    "api"
  ],
  "main": "index.ts",
  "types": "index.ts",
  "exports": {
    "./supabase": {
      "import": "./supabase/index.ts",
      "types": "./supabase/index.ts"
    },
    "./schemas": {
      "import": "./schemas/index.ts",
      "types": "./schemas/index.ts"
    },
    "./common-api": {
      "import": "./common-api/index.ts",
      "types": "./common-api/index.ts"
    }
  },
  "files": [
    "index.ts",
    "schemas/",
    "common-api/",
    "utils/",
    "lib/",
    "extensions/",
    "scripts/",
    "rules/",
    "README.md"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@types/plv8-internal": "^3.1.2",
    "mantine-react-table": "^2.0.0-beta.9",
    "ts-morph": "^26.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "db:plv8ify": "bun scripts/db-plv8ify.ts",
    "db:current": "bun run --env-file=./.env scripts/db-current.ts",
    "db:generate": "source ./.env && drizzle-kit generate",
    "db:migrate": "source ./.env && drizzle-kit migrate",
    "db:push": "source ./.env && drizzle-kit push",
    "db:seed": "bun run --env-file=./.env scripts/db-seed.ts",
    "db:disable-rls": "bun run --env-file=./.env scripts/db-disable-rls.ts",
    "db:reset": "bun run --env-file=./.env scripts/db-openfga.ts && bun db:generate && bun db:migrate && bun db:plv8ify && bun db:current && bun db:seed && rm -r ./drizzle",
    "fga:create": "source ./.env && cd openfga && export FGA_STORE_ID=$(fga store create --name \"Voltade OpenFGA Model\" --model fga.mod --debug | jq -r .store.id) && cd ..",
    "fga:migrate": "source ./.env && openfga migrate --datastore-uri \"postgresql://$DB_USER:$DB_PASSWORD@$DB_HOST:$DB_PORT/$DB_NAME?sslmode=disable\" --datastore-engine postgres",
    "fga:push": "source ./.env && cd openfga && fga model write --store-id $FGA_STORE_ID --file fga.mod && cd ..",
    "fga:init": "bun fga:migrate && bun fga:create && bun fga:push",
    "build": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@hono/zod-validator": "^0.7.2",
    "@openfga/sdk": "^0.9.0",
    "@supabase/postgrest-js": "^1.21.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.8.12",
    "pg": "^8.16.3",
    "zod": "^4.0.14"
  }
}
