{
  "private": false,
  "name": "@voltade/core-schema",
  "license": "AGPL-3.0-only",
  "version": "0.1.0",
  "type": "module",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "module": "index.ts",
  "description": "Voltade OS database schema and API definitions",
  "author": "Voltade Team",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voltade/voltade-os.git",
    "directory": "packages/core-schema"
  },
  "keywords": [
    "database",
    "schema",
    "drizzle",
    "postgresql",
    "api"
  ],
  "main": "index.ts",
  "types": "index.ts",
  "exports": {
    ".": {
      "import": "./index.ts",
      "types": "./index.ts"
    },
    "./schemas": {
      "import": "./schemas/index.ts",
      "types": "./schemas/index.ts"
    },
    "./common-api": {
      "import": "./common-api/index.ts",
      "types": "./common-api/index.ts"
    }
  },
  "files": [
    "index.ts",
    "schemas/",
    "common-api/",
    "utils/",
    "lib/",
    "extensions/",
    "scripts/",
    "rules/",
    "README.md"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@types/plv8-internal": "^3.1.2",
    "ts-morph": "^26.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "db:start": "docker compose --env-file ../../.env up -d",
    "db:stop": "docker compose --env-file ../../.env down",
    "db:plv8ify": "bun scripts/db-plv8ify.ts",
    "db:current": "bun --env-file ../../.env scripts/db-current.ts",
    "db:push": "bun --env-file ../../.env drizzle-kit push",
    "db:seed": "bun --env-file ../../.env scripts/db-seed.ts",
    "db:nuke": "bun --env-file ../../.env scripts/db-nuke.ts",
    "db:reset": "bun db:nuke && bun db:push && bun db:plv8ify && bun db:current && bun db:seed",
    "build": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@hono/zod-validator": "^0.7.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.7.11",
    "pg": "^8.16.3",
    "zod": "^3.24.1"
  }
}
