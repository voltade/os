{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "#drizzle/*": ["./drizzle/*"],
      "#server/*": ["./server/*"],
      "#shared/*": ["./shared/*"],
      "#src/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["dist", "node_modules"]
}
