{
  "private": true,
  "name": "@voltade/platform",
  "license": "AGPL-3.0-only",
  "version": "0.1.0",
  "type": "module",
  "imports": {
    "#drizzle/*": "./drizzle/*",
    "#server/*": "./server/*",
    "#shared/*": "./shared/*",
    "#src/*": "./src/*"
  },
  "exports": {
    "./types": {
      "default": "./types.ts"
    },
    "./drizzle": {
      "default": "./drizzle/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "auth:generate": "bun --bun cli generate --output drizzle/auth.ts --config server/lib/auth/index.ts && bun biome check --write --no-errors-on-unmatched --files-ignore-unknown=true drizzle/auth.ts --unsafe",
    "env": "bun scripts/env.ts",
    "db:pre-push": "bun scripts/db-pre-push.ts",
    "db:current": "bun scripts/db-current.ts",
    "db:push": "bun drizzle-kit push",
    "db:seed": "bun scripts/db-seed.ts",
    "db:studio": "bun drizzle-kit studio",
    "db:reset": "bun env && scripts/db-reset.sh && bun db:pre-push && bun db:push && bun db:current && bun db:seed",
    "dev:server": "bun run --hot server/index.ts",
    "dev:vite": "wait-on http://localhost:3000/healthz && vite dev",
    "dev": "conc bun:dev:*",
    "build:typecheck": "tsc --project tsconfig.json"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.7",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-router": "^1.131.27",
    "@tanstack/router-plugin": "^1.131.27",
    "@tanstack/router-vite-plugin": "^1.131.27",
    "@tanstack/zod-adapter": "^1.131.27",
    "@types/bun": "latest",
    "@types/nodemailer": "^7.0.1",
    "@types/react": "^19.1.10",
    "@types/pg": "^8.15.5",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@voltade/ui": "workspace:*",
    "concurrently": "^9.2.0",
    "jose": "^6.0.13",
    "postcss": "^8.5.6",
    "postcss-simple-vars": "^7.0.1",
    "qiankun": "^2.10.16",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.4",
    "yaml": "^2.8.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@kubernetes/client-node": "^1.3.0",
    "@openfga/sdk": "^0.9.0",
    "better-auth": "^1.3.7",
    "date-fns": "^4.1.0",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.4",
    "nanoid": "^5.1.5",
    "nodemailer": "^7.0.5",
    "zod": "^4.0.17",
    "zustand": "^5.0.8"
  }
}
