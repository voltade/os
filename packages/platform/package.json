{
  "private": true,
  "name": "@voltade/platform",
  "license": "AGPL-3.0-only",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    "./drizzle": {
      "default": "./drizzle/index.ts"
    },
    "./types": {
      "default": "./server/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "auth:generate": "bun --bun cli generate --output drizzle/auth.ts --config server/lib/auth.ts && bun biome check --write --no-errors-on-unmatched --files-ignore-unknown=true drizzle/auth.ts --unsafe",
    "env": "bun scripts/env.ts",
    "db:pre-push": "bun scripts/db-pre-push.ts",
    "db:current": "bun scripts/db-current.ts",
    "db:push": "bun drizzle-kit push",
    "db:seed": "bun scripts/db-seed.ts",
    "db:studio": "bun drizzle-kit studio",
    "db:reset": "bun env && scripts/db-reset.sh && bun db:pre-push && bun db:push && bun db:current && bun db:seed",
    "dev:server": "bun run --hot server/index.ts",
    "dev:vite": "wait-on http://localhost:3000/healthz && vite dev",
    "dev": "conc bun:dev:*",
    "build:typecheck": "tsc --project tsconfig.json"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.4",
    "@tabler/icons-react": "^3.34.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.84.2",
    "@tanstack/react-router": "^1.131.3",
    "@tanstack/router-plugin": "^1.131.3",
    "@tanstack/router-vite-plugin": "^1.131.3",
    "@tanstack/zod-adapter": "^1.131.3",
    "@types/bun": "latest",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "@voltade/qiankun": "3.0.0-rc.19",
    "@voltade/qiankun-react": "0.0.1-rc.14",
    "@voltade/ui": "workspace:*",
    "concurrently": "^9.2.0",
    "jose": "^6.0.12",
    "postcss": "^8.5.6",
    "postcss-simple-vars": "^7.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.11",
    "vite": "^7.1.1",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.4",
    "yaml": "^2.8.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@kubernetes/client-node": "^1.3.0",
    "better-auth": "^1.3.4",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.0",
    "nanoid": "^5.1.5",
    "nodemailer": "^7.0.5",
    "zod": "^4.0.17"
  }
}
