  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "auth:generate": "bun --bun cli generate --output drizzle/auth.ts --config server/lib/auth.ts && bun biome check --write --no-errors-on-unmatched --files-ignore-unknown=true drizzle/auth.ts --unsafe",
    "db:pre-push": "bun scripts/db-pre-push.ts",
    "db:current": "bun scripts/db-current.ts",
    "db:push": "bun drizzle-kit push",
    "db:seed": "bun scripts/db-seed.ts",
    "db:studio": "bun drizzle-kit studio",
    "db:reset": "scripts/db-reset.sh && bun db:pre-push && bun db:push && bun db:current && bun db:seed",
    "dev:server": "bun run --hot server/index.ts",
    "dev:vite": "wait-on http://localhost:3000/healthz && vite dev",
    "dev": "conc bun:dev:*",
    "build:typecheck": "tsc --project tsconfig.json",
    "env": "bun scripts/env.ts"
  },
  "devDependencies": {
    "@mantine/core": "^8.1.3",
    "@mantine/dates": "^8.1.3",
