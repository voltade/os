{
  "private": true,
  "name": "@voltade/app-template",
  "license": "AGPL-3.0-only",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev:server": "bun run --hot --env-file ../../.env server/index.ts",
    "dev:vite": "wait-on http://localhost:30000/healthz && vite dev",
    "dev": "conc bun:dev:*",
    "start": "VITE_NODE_ENV=production bun server/index.ts",
    "build:server": "bun build --minify --sourcemap --target=bun --outdir=dist server/index.ts",
    "build": "rm -rf dist && bun build:server && vite build && bun run scripts/post-build.ts",
    "serve": "VITE_NODE_ENV=production bun run dist/index.js",
    "format": "biome format --write .",
    "db:generate": "echo 'DO NOT USE THIS COMMAND' && echo 'Use `bun run db:pull` instead.'",
    "db:migrate": "echo 'DO NOT USE THIS COMMAND' && echo 'Use `bun run db:pull` instead.'",
    "db:pull": "drizzle-kit pull && bun run scripts/drizzle-regex-fix.ts && bun run db:typegen",
    "db:push": "echo 'DO NOT USE THIS COMMAND' && echo 'Use `bun run db:pull` instead.'",
    "db:studio": "drizzle-kit studio",
    "db:typegen": "source .env && curl -s http://localhost:4000/generators/typescript?included_schemas=public > src/database.gen.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.1",
    "@mantine/core": "^8.1.1",
    "@mantine/dates": "^8.1.1",
    "@mantine/notifications": "^8.1.1",
    "@tanstack/react-query": "^5.81.2",
    "@voltade/core-schema": "workspace:*",
    "hono": "^4.7.11",
    "mantine-datatable": "^8.1.2",
    "mantine-react-table": "^2.0.0-beta.9",
    "vite-plugin-qiankun-lite": "^1.3.0",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0-beta.6",
    "@mantine/form": "^8.1.2",
    "@mantine/hooks": "^8.1.2",
    "@mantine/modals": "^8.1.2",
    "@tailwindcss/postcss": "^4.1.10",
    "@tanstack/react-query-devtools": "^5.81.5",
    "@tanstack/react-router": "^1.121.12",
    "@tanstack/react-router-devtools": "^1.125.4",
    "@tanstack/router-plugin": "^1.121.12",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "postcss-preset-mantine": "^1.17.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.10",
    "tar": "^7.4.3",
    "wait-on": "^8.0.3"
  }
}
