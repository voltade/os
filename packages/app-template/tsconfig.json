{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "#components/*": ["./src/components/*"],
      "#hooks/*": ["./src/hooks/*"],
      "#integrations/*": ["./src/integrations/*"],
      "#lib/*": ["./src/lib/*"],
      "#server/*": ["./server/*"],
      "#shared/*": ["./shared/*"],
      "#types/*": ["./src/types/*"],
      "#utils/*": ["./src/utils/*"],
      "#src/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["dist", "node_modules"]
}
