{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "#src/*": ["./src/*"],
      "#server/*": ["../platform/server/*"],
      "#drizzle/*": ["../platform/drizzle/*"],
      "#shared/*": ["../platform/shared/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["dist", "node_modules"]
}
