{
  "private": true,
  "name": "voltade-cli",
  "version": "0.1.0",
  "license": "AGPL-3.0-only",
  "type": "module",
  "bin": {
    "voltade": "./bin/run.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "imports": {
    "#src/*": "./src/*"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "scripts": {
    "voltade": "bun bin/dev.js",
    "build": "shx rm -rf dist && esbuild --outdir=dist 'src/**/*.ts'",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "oclif manifest && oclif readme",
    "version": "oclif readme && git add README.md"
  },
  "dependencies": {
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "better-auth": "1.3.4",
    "c12": "^3.2.0",
    "hono": "^4.9.1",
    "ora": "^8.2.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@voltade/platform": "workspace:*",
    "esbuild": "^0.25.9",
    "oclif": "^4",
    "shx": "^0.4.0",
    "typescript": "^5"
  }
}
