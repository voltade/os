{
  "private": true,
  "name": "invoicing",
  "license": "AGPL-3.0-only",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev:server": "bun run --hot server/index.ts",
    "dev:vite": "wait-on http://localhost:30000/healthz && vite dev",
    "dev": "conc bun:dev:*",
    "start": "VITE_NODE_ENV=production bun server/index.ts",
    "build:server": "bun build --minify --sourcemap --target=bun --outdir=dist server/index.ts",
    "build": "rm -rf dist && bun build:server && vite build && bun run scripts/post-build.ts",
    "serve": "VITE_NODE_ENV=production bun run dist/index.js",
    "format": "biome format --write .",
    "db:generate": "echo 'DO NOT USE THIS COMMAND' && echo 'Use `bun run db:pull` instead.'",
    "db:migrate": "echo 'DO NOT USE THIS COMMAND' && echo 'Use `bun run db:pull` instead.'",
    "db:pull": "drizzle-kit pull && bun run scripts/drizzle-regex-fix.ts && bun run db:typegen",
    "db:push": "echo 'DO NOT USE THIS COMMAND' && echo 'Use `bun run db:pull` instead.'",
    "db:studio": "drizzle-kit studio",
    "db:typegen": "source .env && curl -s http://localhost:4000/generators/typescript?included_schemas=public > src/database.gen.ts",
    "clean": "rm -rf .tanstack .vite dist node_modules"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hono/zod-validator": "^0.7.2",
    "@mantine/form": "^8.2.7",
    "@tabler/icons-react": "^3.34.1",
    "@tanstack/react-table": "^8.21.3",
    "@voltade/core-schema": "workspace:*",
    "hono": "^4.9.4",
    "jose": "^6.0.13",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@mantine/notifications": "^8.2.7",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "@tanstack/react-router": "1.131.26",
    "@tanstack/react-router-devtools": "1.131.26",
    "@tanstack/router-plugin": "1.131.26",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@voltade/sdk": "workspace:*",
    "@voltade/ui": "workspace:*",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "mantine-react-table": "^2.0.0-beta.9",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "shadcn": "^2.10.0",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.12",
    "tar": "^7.4.3",
    "vite": "^7.1.3",
    "vite-plugin-qiankun-lite": "^1.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.4",
    "web-vitals": "^5.1.0"
  }
}
